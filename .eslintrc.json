{
  "extends": "standard",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [
    "html"
  ],
  "rules": {
    "no-undef": "off",
    "no-console": "off",
    "new-cap": ["error", { "capIsNewExceptions": ["Polymer"], "capIsNewExceptionPattern": "Mixin$" }],
    "require-jsdoc": "off"
  },
  "globals": {
    "Polymer": true
  }
}